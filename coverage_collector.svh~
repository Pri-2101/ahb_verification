import uvm_pkg::*;
`include "uvm_macros.svh"

class coverage_collector extends uvm_subscriber #(uvm_sequence_item);
   `uvm_component_utils(coverage_collector)


   
   extern function new(string name = "coverage_collector", uvm_component parent = null);
   extern function void build_phase(uvm_phase phase);
   extern task run_phase(uvm_phase phase);
   extern function report_phase(uvm_phase phase);

endclass : coverage_collector


function coverage_collector::new(string name = "coverage_collector", uvm_component parent = null);
   super.new(name, parent);
endfunction : new


